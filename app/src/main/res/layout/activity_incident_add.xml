<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.greylabs.sumod.dbct10.IncidentAdd">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key_latitude"
        android:id="@+id/inc_key_lat_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key_longitude"
        android:id="@+id/inc_key_long_view"
        android:layout_below="@+id/inc_key_lat_view"
        android:layout_alignParentStart="true"
        android:paddingBottom="30dp"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key_category"
        android:id="@+id/inc_key_cat_view"
        android:layout_below="@+id/inc_key_long_view"
        android:layout_alignParentStart="true"
        android:paddingBottom="30dp"  />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/button_save_incident"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="buttonSaveIncident"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inc_lat_editTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:inputType="text"
        android:layout_toEndOf="@+id/inc_key_long_view" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inc_long_editTextView"
        android:layout_below="@+id/inc_lat_editTextView"
        android:layout_alignParentEnd="true"
        android:inputType="text"
        android:layout_toEndOf="@+id/inc_key_long_view" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inc_cat_editTextView"
        android:layout_below="@+id/inc_long_editTextView"
        android:layout_alignParentEnd="true"
        android:inputType="text"
        android:layout_toEndOf="@+id/inc_key_long_view" />

</RelativeLayout>
