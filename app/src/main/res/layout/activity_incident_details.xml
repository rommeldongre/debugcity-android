<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.greylabs.sumod.dbct10.IncidentDetails">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key_latitude"
        android:id="@+id/inc_key_lat_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/inc_lat_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key_longitude"
        android:id="@+id/inc_key_long_view"
        android:layout_alignParentStart="true"
        android:paddingRight="20dp"
        android:layout_alignTop="@+id/inc_long_view"
        android:layout_alignBottom="@+id/inc_long_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key_category"
        android:id="@+id/inc_key_cat_view"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/inc_cat_view"
        android:layout_alignBottom="@+id/inc_cat_view" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:onClick="buttonDeleteIncident"
        android:id="@+id/button_delete_incident"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit"
        android:id="@+id/button_edit_incident"
        android:onClick="buttonEditIncident"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:inputType="numberDecimal"
        android:id="@+id/inc_lat_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/inc_key_long_view" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:inputType="numberDecimal"
        android:id="@+id/inc_long_view"
        android:layout_below="@+id/inc_lat_view"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/inc_key_long_view" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:inputType="text"
        android:id="@+id/inc_cat_view"
        android:layout_below="@+id/inc_long_view"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/inc_key_long_view" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/inc_image_view"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button_delete_incident"
        android:layout_alignEnd="@+id/button_edit_incident"
        android:layout_below="@+id/inc_key_cat_view" />

</RelativeLayout>
