<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/material_blue_grey_800"
    android:id="@+id/relativeLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shoot"
        android:onClick="buttonShoot"
        android:id="@+id/button_shoot"
        android:layout_alignTop="@+id/button_maps"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photo"
        android:id="@+id/button_selectImage"
        android:onClick="buttonSelectImage"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ViewFlipper
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewFlipper"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/button_shoot">

    </ViewFlipper>

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.github.mikephil.charting.charts.BarChart"
        android:id="@+id/chart1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/button_shoot" />



    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.github.mikephil.charting.charts.BarChart"
        android:id="@+id/chart2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/button_shoot" />

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.github.mikephil.charting.charts.RadarChart"
        android:id="@+id/chart3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button_shoot" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_flip"
        android:onClick="flipToNext"
        android:background="@android:drawable/ic_media_play"
        android:layout_toEndOf="@+id/space"
        android:layout_alignTop="@+id/space" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_maps"
        android:background="@android:drawable/ic_menu_mapmode"
        android:onClick="gotoMapsActivity"
        android:layout_alignBottom="@+id/space2"
        android:layout_toStartOf="@+id/space2" />

    <Space
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/button_selectImage"
        android:id="@+id/space"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/button_selectImage" />

    <Space
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/button_shoot"
        android:id="@+id/space2"
        android:layout_alignTop="@+id/button_flip"
        android:layout_alignBottom="@+id/button_flip" />


</RelativeLayout>
