<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/material_blue_grey_800"
    android:id="@+id/relativeLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adminButton"
        android:id="@+id/adminButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="adminButtonClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shoot"
        android:onClick="buttonShoot"
        android:id="@+id/button_shoot"
        android:layout_alignBottom="@+id/adminButton"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photo"
        android:id="@+id/button_selectImage"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="buttonSelectImage" />

    <ViewFlipper
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewFlipper"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/adminButton" />

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.github.mikephil.charting.charts.BarChart"
        android:id="@+id/chart1"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/adminButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />



    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.github.mikephil.charting.charts.BarChart"
        android:id="@+id/chart2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/adminButton"
        android:layout_alignParentTop="true" />



</RelativeLayout>
